{
  "name": "appointment-backend",
  "version": "1.0.0",
  "description": "Appointment System Backend API",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc && cp -r src/prisma dist/",
    "start": "node dist/server.js",
    "db:generate": "prisma generate --schema=src/prisma/schema.prisma",
    "db:migrate": "prisma migrate dev --schema=src/prisma/schema.prisma",
    "db:push": "prisma db push --schema=src/prisma/schema.prisma",
    "db:seed": "tsx src/prisma/seed.ts",
    "postinstall": "prisma generate --schema=src/prisma/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "^6.0.0",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.6",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.3",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.0.0",
    "prisma": "^6.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0"
  },
  "prisma": {
    "schema": "src/prisma/schema.prisma"
  }
}
